# This file sources environment variables from the monorepo root

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/enterprise_db"

# Redis Configuration (optional)
# UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
# UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Authentication Configuration
BASE_URL="http://localhost:3000"
PRODUCTION_URL="https://yourdomain.com"
BETTER_AUTH_SECRET="your-super-secret-32-character-string"
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_ROOT_DOMAIN="localhost"

# Discord OAuth
AUTH_DISCORD_ID="your-discord-client-id"
AUTH_DISCORD_SECRET="your-discord-client-secret"

# Google OAuth (optional) - using both naming conventions for compatibility
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional) - using both naming conventions for compatibility
AUTH_GITHUB_ID="your-github-client-id"
AUTH_GITHUB_SECRET="your-github-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Microsoft OAuth (optional) - using both naming conventions for compatibility
AUTH_MICROSOFT_ID="your-microsoft-client-id"
AUTH_MICROSOFT_SECRET="your-microsoft-client-secret"
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# Development flags
SKIP_ENV_VALIDATION=false
